                android:layout_weight="1"
                android:background="@drawable/background4"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/solat4_rukuk" />

            <Space
                android:layout_width="12dp"
                android:layout_height="22dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_qunut"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background4"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/solat_doaqunut" />

            <Space
                android:layout_width="12dp"
                android:layout_height="22dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_sujud2"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background4"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/solat5_sujud" />

            <Space
                android:layout_width="12dp"
                android:layout_height="22dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_duduk2"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background4"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/solat6_duduk_a_2sujud" />

            <Space
                android:layout_width="12dp"
                android:layout_height="22dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_sujud22"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background4"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/solat5_sujud" />

            <Space
                android:layout_width="12dp"
                android:layout_height="22dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_tahiyatakhir"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background4"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/solat7_tahiyat_akhir" />

            <Space
                android:layout_width="12dp"
                android:layout_height="22dp"
