                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background4"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/solat3_alfatihah" />

            <Space
                android:layout_width="12dp"
                android:layout_height="22dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_alfatihah"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background4"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/solat3_alfatihah" />

            <Space
                android:layout_width="12dp"
                android:layout_height="22dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_rukuk1"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background4"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/solat4_rukuk" />

            <Space
                android:layout_width="12dp"
                android:layout_height="22dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_iktidal1"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background4"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/solat1_berdiritegak" />

            <Space
                android:layout_width="12dp"
                android:layout_height="22dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_sujud1"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background4"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/solat5_sujud" />

            <Space
                android:layout_width="12dp"
                android:layout_height="22dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_duduk1"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background4"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/solat6_duduk_a_2sujud" />

            <Space
                android:layout_width="12dp"
                android:layout_height="22dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_sujud12"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background4"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/solat5_sujud" />

            <Space
                android:layout_width="12dp"
                android:layout_height="22dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_alfatihah2"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background4"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/solat3_alfatihah" />

            <Space
                android:layout_width="12dp"
                android:layout_height="22dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_rukuk2"
                android:layout_width="94dp"
